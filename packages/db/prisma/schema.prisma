generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat = "esm" // a error in prisma v7 zeptomatch internal dep requiring esm only.
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(uuid()) @db.Uuid
  userId            String  @map("user_id") @db.Uuid
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade) // when a user is deleted acc is deleted as welll

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid()) @db.Uuid
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id") @db.Uuid
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade) // when a user is deleted session is deleted as welll

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model User {
  id            String        @id @default(uuid()) @db.Uuid // datatype of this field in the db level is uuid
  email         String?       @unique @db.VarChar(100) // similarly datatype of this  in db lvl is varchar that is what it denotes baby
  password      String?       @db.VarChar(100)
  avatar        String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt // this says update the timestap whenever data change in this column.
  emailVerified DateTime?
  image         String?
  name          String?

  ChatMessage   ChatMessage[]
  accounts      Account[]
  sessions      Session[]
  createdPods   Pod[]         @relation("PodAdmin") // one to many relationship
  joinedPods    Pod[]         @relation("PodMembers") // many to many relationship
  invites       Invite[]

  @@map("users") // name of this table in db is users.
}

model Pod {
  id          String   @id @default(uuid()) @db.Uuid
  userId      String   @db.Uuid
  title       String   @db.VarChar(100)
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  admin       User     @relation("PodAdmin", fields: [userId], references: [id], onDelete: Cascade)
  members     User[]   @relation("PodMembers") // this is the name of the relation so prisma doesn't get confused and create a new table for this relationship.
  // inorder to reduce ambiguity to prisma give relation names explicitly to avoid errors.
  invite      Invite?
  chatGroup   ChatGroup?

  @@map("pods")
}

model ChatGroup {
  id          String        @id @default(uuid()) @db.Uuid
  title       String        @db.VarChar(100)
  podId       String        @unique @db.Uuid
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  pod       Pod      @relation(fields: [podId], references: [id], onDelete: Cascade)
  ChatMessage ChatMessage[]

  @@map("chat_groups")
}

model ChatMessage {
  id          String    @id @default(uuid()) @db.Uuid
  chatGroupId String    @db.Uuid
  sender      String
  message     String
  userId      String    @db.Uuid
  userEmail   String
  userAvatar  String?
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  chatGroup   ChatGroup @relation(fields: [chatGroupId], references: [id], onDelete: Cascade)

  @@map("chat_messages")
}

model Invite{
  id          String @id @default(uuid()) @db.Uuid
  code        String @unique @db.VarChar(100)
  podID       String @map("pod_id") @db.Uuid @unique
  creatorId   String @db.Uuid @map("creator_id")
  // expiresAt   DateTime 
  maxUses     Int    @default(10)
  useCount    Int    @default(0)

  pod         Pod    @relation(fields: [podID], references: [id], onDelete: Cascade)
  creator     User   @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  @@map("invites")
}
