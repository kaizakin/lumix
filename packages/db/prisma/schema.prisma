generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String       @id @default(uuid()) @db.Uuid // datatype of this field in the db level is uuid
  email         String?      @unique @db.VarChar(100) // similarly datatype of this  in db lvl is varchar that is what it denotes baby
  password      String?      @db.VarChar(100)
  avatar        String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt // this says update the timestap whenever data change in this column.
  emailVerified DateTime?
  image         String?
  name          String?
  ChatGroup     ChatGroup[]
  ChatMessage   ChatMessage[]

  @@map("users") // name of this table in db is users.
}

model ChatGroup {
  id          String        @id @default(uuid()) @db.Uuid
  userId      String        @db.Uuid
  title       String        @db.VarChar(100)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)// when the parent is deleted delete the related records as well.
  ChatMessage ChatMessage[]

  @@map("chat_groups")
}

model ChatMessage {
  id           String    @id @default(uuid()) @db.Uuid
  chatGroupId  String    @db.Uuid
  sender       String
  message      String
  userId       String    @db.Uuid
  userEmail    String
  userAvatar   String?
  createdAt    DateTime  @default(now())
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  chatGroup    ChatGroup @relation(fields: [chatGroupId], references: [id], onDelete: Cascade)

  @@map("chat_messages")
}



